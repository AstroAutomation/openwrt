config interface loopback
        option ifname	lo
        option proto	static
        option ipaddr	127.0.0.1
        option netmask	255.0.0.0

config interface    sta
        option proto    dhcp	
        option force_link 1
    
config interface    sta_static
        option proto    static
        option ipaddr   192.168.1.1
        option netmask  255.255.255.0
        #option ip6addr  
        option force_link 1

config interface    ap
        option proto    static
        option ipaddr   '192.168.1.1'
        option netmask  '255.255.255.0'
        option force_link   1 

config globals globals
        option ula_prefix auto
